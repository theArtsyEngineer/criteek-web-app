<link href="/stylesheets/bootflat.css" rel="stylesheet">
<link rel="stylesheet" href="/stylesheets/login.css">
<script src="/javascripts/jquery.min.js"></script>
<script src="/javascripts/jquery.fs.selecter.min.js"></script>
<script src="/javascripts/jquery.fs.stepper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script src="/javascripts/modalHandle.js"></script>
<link href='/stylesheets/style.css' rel='stylesheet' />
    <link href='/stylesheets/animations.css' rel='stylesheet' />

<div class="body">

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 crit_icon">
<img src="data:image/svg+xml;utf8;base64," />              
                
            </div>
        </div>

        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <h1 class="logo fade_load2">Criteek</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">

                <div class="form fade_load">
                    {{#if hasErrors}}
                    <div class="alert alert-danger">
                        {{# each messages }}
                        <p>{{this}}</p>
                        {{/each}}
                    </div>
                    {{/if}}

                    <form action="/user/signup" method="post" class="signup-form">
                        <input type="text" id="username" placeholder="username" name="username" />
                        <input type="text" id="password" placeholder="password" name="password" />
                        <input type="text" id="email" placeholder="email" name="email" />
                        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                        <input type="submit" value="signup" class="button">
                        <p class="message">Already registered? <a href="/user/signin">Sign In</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
